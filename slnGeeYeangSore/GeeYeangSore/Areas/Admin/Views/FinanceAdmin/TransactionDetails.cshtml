@model GeeYeangSore.Models.HTransaction

@{
    ViewData["Title"] = "交易詳情";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">交易詳情</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">交易編號</dt>
                        <dd class="col-sm-9">@Model.HTradeNo</dd>

                        <dt class="col-sm-3">商家交易編號</dt>
                        <dd class="col-sm-9">@Model.HMerchantTradeNo</dd>

                        <dt class="col-sm-3">交易金額</dt>
                        <dd class="col-sm-9">@Model.HAmount?.ToString("N0")</dd>

                        <dt class="col-sm-3">交易狀態</dt>
                        <dd class="col-sm-9">@Model.HTradeStatus</dd>

                        <dt class="col-sm-3">付款方式</dt>
                        <dd class="col-sm-9">@Model.HPaymentType</dd>

                        <dt class="col-sm-3">付款日期</dt>
                        <dd class="col-sm-9">@Model.HPaymentDate?.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                        <dt class="col-sm-3">商品名稱</dt>
                        <dd class="col-sm-9">@Model.HItemName</dd>

                        <dt class="col-sm-3">更新時間</dt>
                        <dd class="col-sm-9">@Model.HUpdateTime?.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                </div>
            </div>
        </div>
    </div>
</div>