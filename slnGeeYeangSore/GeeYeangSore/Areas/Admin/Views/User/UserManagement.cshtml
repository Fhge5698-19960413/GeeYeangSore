@model List<GeeYeangSore.Areas.Admin.ViewModels.CUserViewModels>

@{
    ViewData["Title"] = "使用者管理";
}

<h2>使用者管理</h2>

<!-- 🔍 搜尋表單 -->
<form id="searchForm" class="mb-3">
    <div class="row mb-2">
        <div class="col-md-6">
            <input type="text" class="form-control" name="userId" placeholder="請輸入房客ID或房東ID" />
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" name="name" placeholder="請輸入房客姓名或房東姓名" />
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-12">
            <label class="form-label">註冊期間</label>
            <div class="input-group">
                <input type="date" class="form-control" name="startDate" />
                <span class="input-group-text">~</span>
                <input type="date" class="form-control" name="endDate" />
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-4">
            <select class="form-select" name="status">
                <option value="">狀態</option>
                <option value="啟用">啟用</option>
                <option value="停用">停用</option>
                <option value="黑名單">黑名單</option>
            </select>
        </div>
        <div class="col-md-4">
            <select class="form-select" name="isTenant">
                <option value="">是否為房客</option>
                <option value="true">是</option>
                <option value="false">否</option>
            </select>
        </div>
        <div class="col-md-4">
            <select class="form-select" name="isLandlord">
                <option value="">是否為房東</option>
                <option value="true">是</option>
                <option value="false">否</option>
            </select>
        </div>
    </div>
    <div class="text-end">
        <button type="submit" class="btn btn-primary">搜尋</button>
    </div>
</form>

<hr />

<!-- 📋 初始顯示使用者資料 -->
<div id="searchResult">
    @await Html.PartialAsync("~/Areas/Admin/Partials/_UserListPartial.cshtml", Model)
</div>

<!-- 🪟 編輯彈窗 -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">編輯使用者</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
            </div>
            <div class="modal-body" id="editModalBody">
                <!-- AJAX 載入表單中 -->
                <div class="text-center text-muted">
                    載入中...
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // 🔁 搜尋提交（初始也會自動執行）
            $('#searchForm').on('submit', function (e) {
                e.preventDefault();

                const formData = {
                    userId: $('input[name="userId"]').val(),
                    name: $('input[name="name"]').val(),
                    status: $('select[name="status"]').val(),
                    startDate: $('input[name="startDate"]').val(),
                    endDate: $('input[name="endDate"]').val(),
                    isTenant: $('select[name="isTenant"]').val(),
                    isLandlord: $('select[name="isLandlord"]').val()
                };

                $.ajax({
                    url: '@Url.Action("SearchUser", "User", new { area = "Admin" })',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (result) {
                        $('#searchResult').html(result);
                    },
                    error: function () {
                        alert("搜尋失敗，請稍後再試！");
                    }
                });
            });

            $('#searchForm').submit(); // 初始執行

            // 🗑️ 刪除使用者（AJAX 無刷新）
            $(document).on('click', '.btn-delete', function () {
                const id = $(this).data('id');
                if (confirm("確定要刪除這筆使用者資料嗎？")) {
                    $.ajax({
                        url: '@Url.Action("Delete", "User", new { area = "Admin" })/' + id,
                        type: 'POST',
                        success: function () {
                            $('#searchForm').submit(); // 重新載入搜尋結果
                        },
                        error: function () {
                            alert("刪除失敗，請稍後再試！");
                        }
                    });
                }
            });

            // ✏️ 載入編輯畫面（modal）
            $(document).on('click', '.btn-edit', function () {
                const id = $(this).data('id');
                $('#editModalBody').html('<div class="text-center text-muted">載入中...</div>');
                const modal = new bootstrap.Modal(document.getElementById('editModal'));
                modal.show();

                $.ajax({
                    url: '@Url.Action("Edit", "User", new { area = "Admin" })/' + id,
                    success: function (html) {
                        $('#editModalBody').html(html);
                    },
                    error: function () {
                        $('#editModalBody').html('<div class="text-danger text-center">載入失敗</div>');
                    }
                });
            });

        });
    </script>
}
