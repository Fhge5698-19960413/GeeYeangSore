@using GeeYeangSore.Areas.Admin.ViewModels
@model List<CUserViewModels>

@{
    ViewData["Title"] = "UserManagement";
}

<div class="card-body">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>房客ID</th>
                <th>房客狀態</th>
                <th>房東ID</th>
                <th>房東狀態</th>
                <th>姓名</th>
                <th>註冊時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.TenantId</td>

                    <!-- ✅ 房客狀態顯示（顏色條件處理） -->
                    <td>
                        @switch (user.TenantStatus)
                        {
                            case "已驗證":
                                <span class="badge bg-success">已驗證</span>
                                break;
                            case "驗證中":
                                <span class="badge bg-warning text-dark">驗證中</span>
                                break;
                            case "封鎖中":
                                <span class="badge bg-danger">封鎖中</span>
                                break;
                            case "未驗證":
                                <span class="badge bg-secondary">未驗證</span>
                                break;
                            default:
                                <span class="badge bg-dark">@user.TenantStatus</span>
                                break;
                        }
                    </td>

                    <td>@user.LandlordId</td>

                    <!-- ✅ 房東狀態顯示（顏色條件處理） -->
                    <td>
                        @switch (user.LandlordStatus)
                        {
                            case "已驗證":
                                <span class="badge bg-success">已驗證</span>
                                break;
                            case "驗證中":
                                <span class="badge bg-warning text-dark">驗證中</span>
                                break;
                            case "封鎖中":
                                <span class="badge bg-danger">封鎖中</span>
                                break;
                            case "未驗證":
                                <span class="badge bg-secondary">未驗證</span>
                                break;
                            default:
                                <span class="badge bg-dark">@user.LandlordStatus</span>
                                break;
                        }
                    </td>

                    <td>@user.Name</td>
                    <td>@user.RegisterDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-info">詳細</button>
                        <button class="btn btn-sm btn-warning">編輯</button>
                        <button class="btn btn-sm btn-danger">刪除</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
