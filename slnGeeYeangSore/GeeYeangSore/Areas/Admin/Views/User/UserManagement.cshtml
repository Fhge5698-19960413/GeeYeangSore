@{
    ViewData["Title"] = "使用者管理";
}
<h2>使用者管理</h2>

<!-- 搜尋表單 -->
<form id="searchForm">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="userId" class="form-control" placeholder="房客ID/房東ID" />
        </div>
        <div class="col-md-4">
            <input type="text" name="name" class="form-control" placeholder="姓名" />
        </div>
        <div class="col-md-4">
            <select name="status" class="form-select">
                <option value="">狀態</option>
                <option value="啟用">啟用</option>
                <option value="停用">停用</option>
                <option value="黑名單">黑名單</option>
            </select>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6">
            <input type="date" name="startDate" class="form-control" />
        </div>
        <div class="col-md-6">
            <input type="date" name="endDate" class="form-control" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6">
            <select name="isTenant" class="form-select">
                <option value="">是否為房客</option>
                <option value="true">是</option>
                <option value="false">否</option>
            </select>
        </div>
        <div class="col-md-6">
            <select name="isLandlord" class="form-select">
                <option value="">是否為房東</option>
                <option value="true">是</option>
                <option value="false">否</option>
            </select>
        </div>
    </div>
    <div class="text-end mt-3">
        <button type="submit" class="btn btn-primary">搜尋</button>
    </div>
</form>

<hr />

<!-- 搜尋結果會動態載入這裡 -->
<div id="searchResult"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchForm').on('submit', function (e) {
                e.preventDefault();

                var formData = {
                    userId: $('input[name="userId"]').val(),
                    name: $('input[name="name"]').val(),
                    status: $('select[name="status"]').val(),
                    startDate: $('input[name="startDate"]').val(),
                    endDate: $('input[name="endDate"]').val(),
                    isTenant: $('select[name="isTenant"]').val(),
                    isLandlord: $('select[name="isLandlord"]').val()
                };

                $.ajax({
                    url: '@Url.Action("SearchUser", "User", new { area = "Admin" })',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (result) {
                        $('#searchResult').html(result);
                    },
                    error: function () {
                        alert('搜尋失敗，請稍後再試！');
                    }
                });
            });
        });
    </script>
}
