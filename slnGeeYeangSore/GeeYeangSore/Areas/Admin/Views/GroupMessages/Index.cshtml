@model IEnumerable<dynamic>

@{
    ViewBag.Title = "群組聊天清單";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">群組聊天清單</h2>

    <form method="get" asp-action="Index" asp-controller="GroupMessages" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="搜尋群組訊息..."
                value="@ViewBag.SearchString" />
            <button class="btn btn-primary" type="submit">搜尋</button>
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>群組ID</th>
                <th>最後訊息時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var group in Model)
                {
                    <tr>
                        <td>@group.ChatId</td>
                        <td>@group.LastMessageTime?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-info"
                                    href="@Url.Action("GroupChat", "GroupMessages", new { area = "Admin", chatId = group.ChatId })">
                                    <i class="fa fa-comments"></i> 進入聊天室
                                </a>
                                @* 封鎖功能待實作
                                <button type="button" class="btn btn-sm btn-warning" onclick="blockGroup(@group.ChatId)">
                                    <i class="fa fa-ban"></i> 封鎖
                                </button>
                                *@
                                <button type="button" class="btn btn-sm btn-danger" onclick="deleteGroup(@group.ChatId)">
                                    <i class="fa fa-trash"></i> 刪除
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">找不到任何群組。</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 分頁 -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                        href="@Url.Action("Index", "GroupMessages", new { area = "Admin", page = i, searchString = ViewBag.SearchString })">@i</a>
                </li>
            }
        </ul>
    </nav>

    <div class="mt-3">
        <a class="btn btn-secondary" href="@Url.Action("Index", "Home", new { area = "Admin" })">返回首頁</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function blockGroup(chatId) {
            if (confirm('確定要封鎖這個群組嗎？')) {
                // TODO: 實作封鎖功能
                alert('群組已封鎖');
            }
        }

        function deleteGroup(chatId) {
            if (confirm('確定要刪除這個群組嗎？此操作無法復原！')) {
                $.ajax({
                    url: '@Url.Action("Delete", "GroupMessages", new { area = "Admin" })/' + chatId,
                    type: 'POST',
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload(); // 重新載入頁面
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('刪除失敗，請稍後再試');
                    }
                });
            }
        }
    </script>
}
