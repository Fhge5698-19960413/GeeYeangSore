@model IEnumerable<GeeYeangSore.Areas.Admin.ViewModels.CUserViewModels>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-3">
        <i class="fa fa-info-circle me-1"></i> 沒有找到符合條件的使用者。
    </div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>房客ID</th>
                <th>房東ID</th>
                <th>姓名</th>
                <th>房客狀態</th>
                <th>房東狀態</th>
                <th>註冊日期</th>
                <th>操作</th> <!-- ✅ 改成操作欄 -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.TenantId</td>
                    <td>@user.LandlordId</td>
                    <td>@user.Name</td>
                    <td>
                        @switch (user.TenantStatus)
                        {
                            case "未驗證":
                                <span class="badge bg-secondary">未驗證</span>
                                break;
                            case "驗證中":
                                <span class="badge bg-warning text-dark">驗證中</span>
                                break;
                            case "已驗證":
                                <span class="badge bg-success">已驗證</span>
                                break;
                            case "封鎖中":
                                <span class="badge bg-danger">封鎖中</span>
                                break;
                            default:
                                <span class="badge bg-dark">未知</span>
                                break;
                        }
                    </td>
                    <td>
                        @switch (user.LandlordStatus)
                        {
                            case "未驗證":
                                <span class="badge bg-secondary">未驗證</span>
                                break;
                            case "驗證中":
                                <span class="badge bg-warning text-dark">驗證中</span>
                                break;
                            case "已驗證":
                                <span class="badge bg-success">已驗證</span>
                                break;
                            case "封鎖中":
                                <span class="badge bg-danger">封鎖中</span>
                                break;
                            default:
                                <span class="badge bg-dark">未知</span>
                                break;
                        }
                    </td>
                    <td>@user.RegisterDate.ToString("yyyy-MM-dd")</td>

                    <!-- ✅ 操作欄 -->
                    <td>
                        <a class="btn btn-sm btn-outline-primary me-1"
                           asp-area="Admin"
                           asp-controller="User"
                           asp-action="Edit"
                           asp-route-id="@user.TenantId">
                            <i class="fa fa-edit"></i> 編輯
                        </a>
                        <a class="btn btn-sm btn-outline-danger"
                           asp-area="Admin"
                           asp-controller="User"
                           asp-action="Delete"
                           asp-route-id="@user.TenantId"
                           onclick="return confirm('確定要刪除這筆使用者資料嗎？');">
                            <i class="fa fa-trash"></i> 刪除
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
