@model GeeYeangSore.Models.HTenant

@if (Model == null)
{
    <div class="alert alert-danger">使用者資料載入失敗。</div>
    return;
}

<form id="editForm" enctype="multipart/form-data">
    <div class="container">
        <!-- 🧍 房客資訊 -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">房客資訊</div>
            <div class="card-body row g-3">
                <!-- ✅ 第 1 行：房客ID + 驗證狀態 -->
                <div class="col-md-6">
                    <label class="form-label">房客ID</label>
                    <input class="form-control" value="@Model.HTenantId" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">驗證狀態</label>
                    <select class="form-select" name="HStatus">
                        <option value="未驗證" selected="@(Model.HStatus == "未驗證")">未驗證</option>
                        <option value="驗證中" selected="@(Model.HStatus == "驗證中")">驗證中</option>
                        <option value="已驗證" selected="@(Model.HStatus == "已驗證")">已驗證</option>
                        <option value="封鎖中" selected="@(Model.HStatus == "封鎖中")">封鎖中</option>
                    </select>
                </div>

                <!-- ✅ 第 2 行：姓名 + 生日 + 性別 -->
                <div class="col-md-4">
                    <label class="form-label">姓名</label>
                    <input class="form-control" name="HUserName" value="@Model.HUserName" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">生日</label>
                    <input type="date" class="form-control" name="HBirthday" value="@Model.HBirthday?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">性別</label>
                    <select class="form-select" name="HGender">
                        <option value="true" selected="@(Model.HGender == true)">男</option>
                        <option value="false" selected="@(Model.HGender == false)">女</option>
                    </select>
                </div>

                <!-- ✅ 第 3 行：電話 + 電子郵件 + 密碼 -->
                <div class="col-md-4">
                    <label class="form-label">電話</label>
                    <input class="form-control" name="HPhoneNumber" value="@Model.HPhoneNumber" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">電子郵件</label>
                    <input type="email" class="form-control" name="HEmail" value="@Model.HEmail" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">密碼</label>
                    <input type="text" class="form-control" name="HPassword" value="@Model.HPassword" />
                </div>

                <!-- ✅ 第 4 行：居住地（單獨一行） -->
                <div class="col-md-12">
                    <label class="form-label">居住地</label>
                    <input class="form-control" name="HAddress" value="@Model.HAddress" />
                </div>

                <!-- ✅ 房客照片（label 對齊左上角，固定尺寸 150x150） -->
                <div class="col-md-6 d-flex flex-column">
                    <label class="form-label">房客照片</label>
                    <img id="tenantPhotoPreview"
                         src="/images/User/@Model.HImages"
                         class="img-fluid border mb-2"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         onerror="this.src='/images/default-user.png'" />
                    <input type="hidden" name="HImage" id="HImage" value="@Model.HImages" />
                </div>


                <div class="col-md-6 d-flex align-items-end justify-content-end">
                    <input type="file" class="form-control d-none" id="uploadTenantPhotoInput" />
                    <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('uploadTenantPhotoInput').click()">修改照片</button>
                </div>
            </div>
        </div>

                
            </div>
        </div>

    <!-- 🧓 房東資訊 -->
    @if (Model.HLandlords != null && Model.HLandlords.Any())
    {
        var landlord = Model.HLandlords.FirstOrDefault();
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">房東資訊</div>
            <div class="card-body row g-3">
                <!-- ✅ 1. 房東本名 -->
                <div class="col-md-4">
                    <label class="form-label">房東本名</label>
                    <input class="form-control" name="HLandlordName" value="@landlord.HLandlordName" readonly />
                </div>

                <!-- ✅ 2. 身份狀態 -->
                <div class="col-md-4">
                    <label class="form-label">身份狀態</label>
                    <input class="form-control" name="HStatus" value="@landlord.HStatus" readonly />
                </div>

                <!-- ✅ 3. 身份建立時間 -->
                <div class="col-md-4">
                    <label class="form-label">身份建立時間</label>
                    <input class="form-control" value="@landlord.HCreatedAt?.ToString("yyyy-MM-dd HH:mm")" readonly />
                </div>

                <!-- ✅ 4. 評價 -->
                <div class="col-md-4">
                    <label class="form-label">評價</label>
                    <input class="form-control" name="HRating" value="@landlord.HRating?.ToString("0.0") ?? " 無資料"" readonly />
                </div>

                <!-- ✅ 5. 銀行名稱 -->
                <div class="col-md-4">
                    <label class="form-label">銀行名稱</label>
                    <input class="form-control" name="HBankName" value="@landlord.HBankName" readonly />
                </div>

                <!-- ✅ 6. 銀行帳戶 -->
                <div class="col-md-4">
                    <label class="form-label">銀行帳戶</label>
                    <input class="form-control" name="HBankAccount" value="@landlord.HBankAccount" readonly />
                </div>

                <!-- ✅ 7. 📷 身分證上傳 -->
                <div class="row g-3 border-top pt-3 mt-3">
                    <!-- 身分證正面 -->
                    <div class="col-md-6">
                        <label class="form-label">身分證正面</label>
                        <img id="idCardFrontPreview" src="/images/User/@landlord.HIdCardFrontUrl" class="img-fluid border mb-2" style="max-height: 200px;" onerror="this.src='/images/default-idcard.png'" />
                        <input type="hidden" name="HIdCardFrontUrl" id="HIdCardFrontUrl" value="@landlord.HIdCardFrontUrl" />
                        <input type="file" class="form-control d-none" id="uploadIdCardFrontInput" />
                        <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('uploadIdCardFrontInput').click()">上傳正面</button>
                    </div>

                    <!-- 身分證反面 -->
                    <div class="col-md-6">
                        <label class="form-label">身分證反面</label>
                        <img id="idCardBackPreview" src="/images/User/@landlord.HIdCardBackUrl" class="img-fluid border mb-2" style="max-height: 200px;" onerror="this.src='/images/default-idcard.png'" />
                        <input type="hidden" name="HIdCardBackUrl" id="HIdCardBackUrl" value="@landlord.HIdCardBackUrl" />
                        <input type="file" class="form-control d-none" id="uploadIdCardBackInput" />
                        <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('uploadIdCardBackInput').click()">上傳反面</button>
                    </div>
                </div>
            </div>
        </div>
    }



        <!-- 儲存按鈕 -->
        <div class="text-end">
            <button type="submit" class="btn btn-primary">儲存變更</button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // 🧍 房客照片上傳
        $('#uploadTenantPhotoInput').on('change', function () {
            const file = this.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('photo', file);

            $.ajax({
                url: '/Admin/User/UploadTenantPhoto',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (photoUrl) {
                    const fileName = photoUrl.split('/').pop();
                    $('#tenantPhotoPreview').attr('src', '/images/User/' + fileName);
                    $('#HImage').val(fileName);
                },
                error: function () {
                    alert('房客照片上傳失敗');
                }
            });
        });

        // 🪪 身分證正面上傳
        $('#uploadIdCardFrontInput').on('change', function () {
            const file = this.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('photo', file);

            $.ajax({
                url: '/Admin/User/UploadLandlordIdFront',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (url) {
                    const fileName = url.split('/').pop();
                    $('#idCardFrontPreview').attr('src', '/images/User/' + fileName);
                    $('#HIdCardFrontUrl').val(fileName);
                },
                error: function () {
                    alert('身分證正面上傳失敗');
                }
            });
        });

        // 🪪 身分證反面上傳
        $('#uploadIdCardBackInput').on('change', function () {
            const file = this.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('photo', file);

            $.ajax({
                url: '/Admin/User/UploadLandlordIdBack',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (url) {
                    const fileName = url.split('/').pop();
                    $('#idCardBackPreview').attr('src', '/images/User/' + fileName);
                    $('#HIdCardBackUrl').val(fileName);
                },
                error: function () {
                    alert('身分證反面上傳失敗');
                }
            });
        });
    </script>
}
